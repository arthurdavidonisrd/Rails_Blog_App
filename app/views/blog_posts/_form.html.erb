<%= form_with(model: blog_post, class: "max-w-lg mx-auto p-6 bg-white shadow-lg rounded-md") do |form| %>
  <% if blog_post.errors.any? %>
    <div class="bg-red-100 text-red-800 p-4 rounded-md mb-4">
      <h2 class="font-bold"><%= pluralize(blog_post.errors.count, "error") %> prohibited this blog_post from being saved:</h2>
      <ul class="mt-2">
        <% blog_post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :title, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :body, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "Save Post", class: "w-full bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>
