<p style="color: green"><%= notice %></p>

<% content_for :title, "Blog posts" %>

<h1 class="text-3xl text-center">All the Posts</h1>

<div id="blog_posts">
  <% @blog_posts.each do |blog_post| %>
    <%= render blog_post %>
    <p>
      <%= link_to "Show this blog post", blog_post %>
    </p>
  <% end %>
</div>

